# Este archivo contiene las variables de entorno necesarias para el proyecto.
# --- Configuración General del Proyecto ---
PROJECT_NAME="WrappedFusion API"
PROJECT_VERSION="0.1.0"
DEBUG_MODE=True

# --- Configuración de la Base de Datos MySQL ---
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=wrapped_fusion_db

# --- Credenciales de Spotify API (OAuth 2.0) ---
# Debes registrar tu aplicación en el Dashboard de Desarrolladores de Spotify
# https://developer.spotify.com/dashboard/
SPOTIFY_CLIENT_ID=tu_spotify_client_id_aqui
SPOTIFY_CLIENT_SECRET=tu_spotify_client_secret_aqui
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/v1/auth/spotify/callback

# --- Clave Secreta para JWT/Cifrado ---
# Genera una clave segura, por ejemplo, usando 'openssl rand -hex 32'
SECRET_KEY="una_clave_secreta_fuerte_y_aleatoria_para_produccion"